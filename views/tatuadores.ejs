                <form method="POST" action="/chat">
                  <input type="hidden" name="idUser" value="<%= tatuadores[i].id %>" />
                  <button type="submit" class="botaozika">Chat</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
